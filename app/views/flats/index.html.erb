<%= render 'layouts/navbar' %>

<div class="container">

  <div class="title">
    <h1>All our Flats (<%= @flats.count %>)</h1>
  </div>

  <div class="all-flats">
    <% @flats.each do |flat| %>
      <div class="flat-card box">
        <div>
          <img src="https://picsum.photos/200" alt="flat-pic">
        </div>
        <div class="card-info">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <p>icon('fas', 'user-friends') <%= flat.number_of_guests %>  <%= flat.price_per_night %>  <%= flat.smoking %></p>
        </div>
        <div class="more-info">
          <p><%= link_to 'More info', flat_path(flat) %></p>
          <p><%= link_to 'Edit', edit_flat_path(flat) %></p>
          <p><%= link_to 'Remove', flat_path(flat) %></p>
        </div>
      </div>
    <% end %>

  </div>

</div>
